<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_12"
    tools:ignore="SpUsage">

    <TextView
        android:id="@+id/date_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/absoluteBlack"
        android:textSize="@dimen/text_view_14dp"
        app:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/absoluteBlack"
        android:textSize="@dimen/text_view_14dp"
        app:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_forecast"
        android:layout_width="@dimen/icon_24dp"
        android:layout_height="@dimen/icon_24dp"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintEnd_toStartOf="@id/temp_forecast"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>