<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activities.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <com.OdiousPanda.thefweather.CustomUI.MovableFAB
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:backgroundTint="#fff"
        app:rippleColor="@color/bg_screen1"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_location_b"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/location_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <TextView
            android:id="@+id/location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:text="@string/location_list_title"
            android:textColor="#000"
            android:textSize="@dimen/text_view_20sp"
            app:fontFamily="@font/nunito"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
            " />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:text="This feature is currently under development"
            android:textColor="#000"
            android:textSize="@dimen/text_view_18sp"
            app:fontFamily="@font/nunito"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_go_back"
            android:layout_width="@dimen/icon_36dp"
            android:layout_height="@dimen/icon_36dp"
            android:layout_marginStart="@dimen/margin_16"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/location_title"
            app:layout_constraintBottom_toBottomOf="@id/location_title"/>

        <ImageView
            android:id="@+id/btn_add_location"
            android:layout_width="@dimen/icon_36dp"
            android:layout_height="@dimen/icon_36dp"
            android:layout_marginEnd="@dimen/margin_16"
            android:src="@drawable/ic_add_b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/location_title"
            app:layout_constraintBottom_toBottomOf="@id/location_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#fff">
        <ImageView
            android:id="@+id/loading_icon"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_loading"
            android:layout_width="@dimen/big_icon_128dp"
            android:layout_height="@dimen/big_icon_128dp"
            android:layout_marginBottom="@dimen/margin_n_16"/>
        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/nunito"
            android:textSize="@dimen/text_view_18sp"
            android:layout_below="@id/loading_icon"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:text="@string/loading_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/no_connection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#fff">
        <ImageView
            android:id="@+id/no_connection_icon"
            android:layout_width="@dimen/icon_90dp"
            android:layout_height="@dimen/icon_90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_sadcloud"
            android:translationY="@dimen/margin_n_16" />
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:layout_below="@id/no_connection_icon"
            app:fontFamily="@font/nunito"
            android:textSize="@dimen/text_view_18sp"
            android:translationY="@dimen/margin_n_16"
            android:text="@string/no_connection_tv1"/>
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:layout_below="@id/tv_1"
            app:fontFamily="@font/nunito"
            android:textSize="@dimen/text_view_18sp"
            android:translationY="@dimen/margin_n_16"
            android:text="@string/no_connection_tv2"/>
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:layout_below="@id/tv_2"
            app:fontFamily="@font/nunito"
            android:textSize="@dimen/text_view_18sp"
            android:translationY="@dimen/margin_n_16"
            android:text="@string/no_connection_tv3"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>