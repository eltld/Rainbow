<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragments.DetailsFragment">
    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            app:fontFamily="@font/nunito"
            android:text="@string/details_heading"
            android:paddingTop="@dimen/margin_8"
            android:paddingBottom="@dimen/margin_8"
            android:gravity="center"
            android:textSize="@dimen/text_view_24sp"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutRealFeel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tv_tempRealFeel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:fontFamily="@font/nunito"
                android:textSize="@dimen/text_view_36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tempRealFeelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:fontFamily="@font/nunito"
                android:gravity="center"
                android:textSize="@dimen/text_view_18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tempRealFeel" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">
            <LinearLayout
                android:id="@+id/layoutUV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_4"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/margin_4"
                android:padding="@dimen/margin_8">
                <TextView
                    android:id="@+id/tv_Uv"
                    app:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:textSize="@dimen/text_view_20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_UVTitle"
                    app:fontFamily="@font/nunito"
                    android:text="@string/uv_index_title"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_4"
                    android:textSize="@dimen/text_view_18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutHumidity"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_4"
                android:padding="@dimen/margin_8">
                <TextView
                    android:id="@+id/tv_humidity"
                    app:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:textSize="@dimen/text_view_20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_humidityTitle"
                    app:fontFamily="@font/nunito"
                    android:text="@string/humidity_title"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_4"
                    android:textSize="@dimen/text_view_18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">
            <LinearLayout
                android:id="@+id/layoutVisibility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_4"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/margin_4"
                android:padding="@dimen/margin_8">
                <TextView
                    android:id="@+id/tv_visibility"
                    app:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:textSize="@dimen/text_view_20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_visibilityTitle"
                    app:fontFamily="@font/nunito"
                    android:text="@string/visibility_title"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_4"
                    android:textSize="@dimen/text_view_18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutPressure"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_4"
                android:padding="@dimen/margin_8">
                <TextView
                    android:id="@+id/tv_pressure"
                    app:fontFamily="@font/nunito"
                    android:gravity="center"
                    android:textSize="@dimen/text_view_20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_pressureTitle"
                    app:fontFamily="@font/nunito"
                    android:text="@string/pressure_title"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_4"
                    android:textSize="@dimen/text_view_18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutAqi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_16"
            android:padding="@dimen/margin_8"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tv_aqi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/air_quality_index_title"
                android:textSize="@dimen/text_view_24sp"
                app:fontFamily="@font/nunito"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_view_36sp"
                app:fontFamily="@font/nunito"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/margin_8" />

            <TextView
                android:id="@+id/tv_aqi_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:textSize="@dimen/text_view_18sp"
                app:fontFamily="@font/nunito"
                app:layout_constraintEnd_toStartOf="@+id/tv_aqi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_aqi_title" />

            <ImageView
                android:id="@+id/icon_aqi_info"
                android:layout_width="@dimen/margin_16"
                android:layout_height="@dimen/margin_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_16"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/wind_title"
                android:text="@string/wind_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_view_24sp"
                app:fontFamily="@font/nunito" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
                <ImageView
                    android:id="@+id/ground"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wind_detail_ground_view_height"
                    android:src="#333333"
                    android:padding="@dimen/margin_16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/windmill_base"
                    android:layout_width="@dimen/windmill_base_width"
                    android:layout_height="@dimen/windmill_base_height"
                    android:src="@drawable/windmill_base"
                    android:layout_marginLeft="@dimen/margin_16"
                    app:layout_constraintBottom_toTopOf="@+id/ground"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <ImageView
                    android:id="@+id/windmill_wings"
                    android:layout_width="@dimen/windmill_wings_width"
                    android:layout_height="@dimen/windmill_wings_width"
                    android:src="@drawable/windmill_wings"
                    app:layout_constraintLeft_toLeftOf="@id/windmill_base"
                    app:layout_constraintRight_toRightOf="@id/windmill_base"
                    app:layout_constraintTop_toTopOf="@id/windmill_base"
                    app:layout_constraintBottom_toBottomOf="@id/windmill_base"/>

                <TextView
                    android:id="@+id/wind_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    app:fontFamily="@font/nunito"
                    android:text="26 km/h"
                    android:textSize="@dimen/text_view_20sp"
                    app:layout_constraintBottom_toTopOf="@+id/wind_direction"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/wind_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginRight="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    app:fontFamily="@font/nunito"
                    android:text="South"
                    android:textSize="@dimen/text_view_18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:id="@+id/layout_next_hours"-->
            <!--android:layout_marginTop="@dimen/margin_16"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--android:layout_marginBottom="@dimen/margin_16">-->
            <!--<TextView-->
                <!--android:id="@+id/tv_next_hours_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/the_next_hours_title"-->
                <!--android:textSize="@dimen/text_view_24sp"-->
                <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
                <!--android:paddingStart="@dimen/activity_horizontal_margin"-->
                <!--android:paddingEnd="@dimen/activity_horizontal_margin"-->
                <!--app:fontFamily="@font/nunito" />-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/layout_forecast"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_16">
            <TextView
                android:id="@+id/tv_forecast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forecast_title"
                android:textSize="@dimen/text_view_24sp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                app:fontFamily="@font/nunito"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_forecast"
                android:orientation="horizontal"
                tools:listitem="@layout/forecast_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>