<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_layout"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_n_16"
        android:weightSum="3">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/tv_temp_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_16"
                android:paddingStart="@dimen/margin_16" />
            <ImageView
                android:id="@+id/tv_reaFeel_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:paddingLeft="@dimen/margin_16"
                android:paddingStart="@dimen/margin_16" />

        </LinearLayout>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/widget_icon"
            android:layout_width="0dp"
            android:layout_height="@dimen/big_icon_128dp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/quote_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/layout_data"/>

    <ImageView
        android:id="@+id/quote_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/quote_main" />
</RelativeLayout>