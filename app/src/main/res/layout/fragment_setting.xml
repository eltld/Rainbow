<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/setting_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragments.SettingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                app:fontFamily="@font/montserrat"
                android:text="@string/setting"
                android:textColor="@color/absoluteBlack"
                android:paddingTop="@dimen/margin_8"
                android:paddingBottom="@dimen/margin_8"
                android:gravity="center"
                android:textSize="@dimen/text_view_24sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/margin_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_temp_setting"
                    android:layout_width="match_parent"
                    app:fontFamily="@font/montserrat"
                    android:textColor="@color/absoluteBlack"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_18sp"
                    android:text="@string/temperature_setting_title"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:id="@+id/btn_c"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_view_14sp"
                        android:textAllCaps="false"
                        android:text="@string/temp_setting_degree_c"/>
                    <Button
                        android:id="@+id/btn_f"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/temp_setting_degree_f"/>
                    <Button
                        android:id="@+id/btn_scientist"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/scientist"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_distance_setting"
                    android:layout_width="match_parent"
                    app:fontFamily="@font/montserrat"
                    android:textColor="@color/absoluteBlack"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_18sp"
                    android:text="@string/distance_setting_title"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:id="@+id/btn_km"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_view_14sp"
                        android:textAllCaps="false"
                        android:text="@string/km"/>
                    <Button
                        android:id="@+id/btn_mi"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/mi"/>
                    <Button
                        android:id="@+id/btn_bananas"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        android:layout_weight="1"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/bananas"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_speed_setting"
                    android:layout_width="match_parent"
                    app:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_18sp"
                    android:text="@string/speed_setting_title"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:id="@+id/btn_kmph"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_view_14sp"
                        android:textAllCaps="false"
                        android:text="@string/kmph"/>
                    <Button
                        android:id="@+id/btn_miph"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/miph"/>
                    <Button
                        android:id="@+id/btn_bananaph"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/banana_h"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_pressure_setting"
                    android:layout_width="match_parent"
                    app:fontFamily="@font/montserrat"
                    android:textColor="@color/absoluteBlack"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_18sp"
                    android:text="@string/pressure_setting_title"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:id="@+id/btn_psi"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        android:textAllCaps="false"
                        android:text="@string/psi"/>
                    <Button
                        android:id="@+id/btn_mmhg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/mmhg"/>
                    <Button
                        android:id="@+id/btn_depress"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        app:fontFamily="@font/montserrat"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/your_depression"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_explicit_setting"
                    android:layout_width="match_parent"
                    app:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    android:textColor="@color/absoluteBlack"
                    android:textSize="@dimen/text_view_18sp"
                    android:text="@string/explicit_setting_title"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/btn_im_not"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        android:textSize="@dimen/text_view_14sp"
                        android:textAllCaps="false"
                        android:text="@string/im_not"/>
                    <Button
                        android:id="@+id/btn_hell_yeah"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:background="@color/default_button_bg"
                        android:textColor="@color/pureWhite"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_view_14sp"
                        android:text="@string/hell_yeah"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_24">
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    app:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_18sp"
                    android:textColor="@color/absoluteBlack"
                    android:layout_marginTop="@dimen/margin_32"
                    android:text="@string/rate_setting_title"/>
                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    app:fontFamily="@font/montserrat"
                    android:textColor="@color/absoluteBlack"
                    android:layout_marginTop="@dimen/margin_32"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_18sp"
                    android:text="@string/about_setting_title"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/about_me_layout" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
